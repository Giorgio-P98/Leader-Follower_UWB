<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="person_walking">
  
    <link name="world">
    </link>

    <joint name="base" type="fixed">
        <origin xyz="2.3 0 0" rpy="0 0 0"/>
        <parent link="world"/>
        <child link="base_link"/>
    </joint>
    
    <!-- base_link is a large rectangular plate. Some things to note: -->
    <!-- - We set the visual origin Z to half the box height, so that the link origin sits at the bottom of the box -->
    <!-- - We set the collision to be identical to the visual -->
    <!-- - We specified the colour manually (but still need to enter a name) -->
    <!-- - We specified all the inertial parameters manually -->
    <link name="base_link">
        <visual>
            <origin xyz="0 0 0.05" rpy="0 0 0"/>
            <geometry>
                <box size="0 0 0" />
            </geometry>
            <material name="green">
                <color rgba="0.2 1 0.2 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0.05" rpy="0 0 0"/>
            <geometry>
                <box size="0 0 0" />
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0.05" rpy="0 0 0"/>
            <mass value="12" />
            <inertia ixx="2.26" ixy="0.0" ixz="0.0" iyy="6.26" iyz="0.0" izz="8.5" />
            <!-- <mass value="0" />
            <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0" /> -->
        </inertial>
    </link>

    <joint name="movingCubex" type="prismatic">
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <parent link="base_link"/>
        <child link="prism_link1"/>
        <axis xyz = "1 0 0"/>
        <limit lower="-100" upper="100" velocity="100" effort="100"/>
    </joint>

    <link name="prism_link1">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0. 0.0 0" />
            </geometry>
            <material name="green">
                <color rgba="0.2 1 0.2 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0.05" rpy="0 0 0"/>
            <geometry>
                <box size="0 0 0" />
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 1" rpy="0 0 0"/>
            <mass value="12" />
            <inertia ixx="2.26" ixy="0.0" ixz="0.0" iyy="6.26" iyz="0.0" izz="8.5" />
            <!-- <mass value="0" />
            <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0" /> -->
        </inertial>
    </link>

    <joint name="movingCubey" type="prismatic">
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <parent link="prism_link1"/>
        <child link="rot_link"/>
        <axis xyz = "0 1 0"/>
        <limit lower="-100" upper="100" velocity="100" effort="100"/>
    </joint>

    <link name="rot_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0 0 0" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0.05" rpy="0 0 0"/>
            <geometry>
                <box size="0 0 0" />
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 -0.1 0.95" rpy="0 0 0"/>
            <mass value="12" />
            <inertia ixx="2.26" ixy="0.0" ixz="0.0" iyy="6.26" iyz="0.0" izz="8.5" />
            <!-- <mass value="0" />
            <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0" /> -->
        </inertial>
    </link>

    <joint name="rotationz" type="revolute">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <parent link="rot_link"/>
        <child link="person"/>
        <axis xyz="0 0 1"/>
        <limit lower="0" upper="${2*pi}" velocity="100" effort="100"/> 
    </joint>

    <link name="person">
      <inertial>
        <origin xyz="0 -0.1 0.95" rpy="0 0 0"/>
        <mass value="80" />
        <inertia ixx="24.88" ixy="0.0" ixz="0.0" iyy="25.73" iyz="0.0" izz="2.48" />
      </inertial>

      <!-- <collision name="bottom">
        <origin xyz="0 -0.1 0.01" rpy="0 0 0"/>
        <geometry>
          <box size="0.5 0.35 0.02" />
        </geometry>
      </collision> -->

      <collision name="person">
        <origin xyz="0 0 0.02" rpy="0.04 0 1.57"/>
        <geometry>
          <mesh filename="$(find move_target)/description/person_standing/meshes/standing.dae"/>
        </geometry>
      </collision>

      <visual name="visual">
        <origin xyz="0 0 0.02" rpy="0.04 0 1.57"/>
        <geometry>
          <mesh filename="$(find move_target)/description/person_standing/meshes/standing.dae" />
        </geometry>
      </visual>
    </link>
  
    <xacro:include filename="exgazebo.xacro" />
    
</robot>
